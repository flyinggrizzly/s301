<header class="top-bar">
    <div class="top-bar-left">
      <h1><%= link_to(S301::Application.config.app_name, root_url, class: 'logo') %></h1>
    </div>
    <div class="top-bar-right">
      <nav>
        <ul class="menu site_nav">
          <li><%= link_to 'Short URLs', short_urls_path %></li>
          <li><% if signed_in? %>
              <%= link_to 'Sign out', sign_out_path, method: :delete %>
              <% else %>
              <%= link_to 'Sign in', sign_in_path %>
              <% end %>
            </li>
        </ul>
      </nav>
    </div>
</header>
